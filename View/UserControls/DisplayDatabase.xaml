<UserControl x:Class="RegistrationApp.View.UserControls.DisplayDatabase"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RegistrationApp.View.UserControls"
             xmlns:model="clr-namespace:RegistrationApp.Model"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="300">
    <UserControl.Resources>
        <model:Database x:Key="database"/>
    </UserControl.Resources>
    <Grid>
        <TextBlock Text="{Binding Date}"
                   Foreground="Azure"
                   Margin="15"
                   FontSize="20"
                   FontWeight="Bold"
                   VerticalAlignment="Center"
                   />
        </Grid>
</UserControl>
